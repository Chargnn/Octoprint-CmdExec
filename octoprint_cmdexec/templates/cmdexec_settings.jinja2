<form class="form-horizontal">
    <div class="control-group">
        <label class="control-label">{{ _('Bash command') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.cmdexec.command">
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">{{ _('Navbar icon') }}</label>
        <div class="controls">
            <select class="fa-icon" data-bind="value: settings.plugins.cmdexec.icon">
                {% for item in plugin_cmdexec_icons %}
                    <option value="{{ item }}">&#x{{ item }};</option>
                {% endfor %}
            </select>
        </div>
    </div>
</form>
